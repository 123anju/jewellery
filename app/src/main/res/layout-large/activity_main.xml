<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saurabhomer.Jewellery.MainActivity"
    android:background="@color/splash">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="18dp"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_below="@+id/txtSlogan"
            android:paddingTop="600dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <info.hoang8f.widget.FButton
                android:id="@+id/btnSignjoin"
                android:text="Join Us"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>


            <info.hoang8f.widget.FButton
                android:id="@+id/btnSignIn"
                android:text="Sign In"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                app:buttonColor="@color/btnSignActive"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/splash"
            android:id="@+id/txtSlogan"
            android:text="@string/slogan"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center" />

    </android.support.v7.widget.CardView>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2">
    </LinearLayout>

</android.support.constraint.ConstraintLayout>